<Window x:Class="GradeCalculator.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalculator"
        mc:Ignorable="d"
        Title="Grade Calculator" Height="534.107" Width="500" Closing="Window_Closing">
    <Grid Margin="0,30,-0.4,-2.6">
        <DataGrid x:Name="classGrid" HorizontalAlignment="Left" Height="421" Margin="10,10,0,0" VerticalAlignment="Top" Width="474"/>
        <Button x:Name="generateExcelButton" Content="Generate Excel Report" HorizontalAlignment="Left" Margin="10,442,0,0" VerticalAlignment="Top" Width="131" Click="generateExcelButton_Click"/>
        <Menu HorizontalAlignment="Left" Height="20" Margin="0,-29,0,0" VerticalAlignment="Top" Width="492">
            <MenuItem Header="Edit">
                <MenuItem x:Name="editClassMenuItem" Header="Edit Class" Click="editClassMenuItem_Click"/>
                <MenuItem x:Name="addClassMenuItem" Header="Add Class" Click="addClassMenuItem_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
